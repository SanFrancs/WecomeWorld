<% content_for :javascripts do %>
  <link rel="alternate" type="application/rss+xml" title="RSS" href="<%= main_app.feed_user_url(@user) %>">
<% end %>
<%= render_list class: "users-menu nav nav-tabs" do |li|
  li << link_to(t("users.menu.overview"), user_path(@user), class: "nav-link")
  li << link_to(t("users.menu.topics"), topics_user_path(@user), class: "nav-link")
  li << link_to(t("users.menu.replies"), replies_user_path(@user), class: "nav-link")
  li << link_to(t("users.menu.favorites"), favorites_user_path(@user), class: "nav-link hide-ios hidden-mobile")
  li << link_to(t("users.menu.following"), following_user_path(@user), class: "nav-link hidden-mobile")
  li << link_to(t("users.menu.followers"), followers_user_path(@user), class: "nav-link hidden-mobile")
  if owner?(@user) && current_user.block_users?
    li << link_to(t("users.menu.blocked"), blocked_user_path(@user), class: "nav-link hide-ios hidden-mobile")
  end
end %>
