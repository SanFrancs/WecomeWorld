<div class="w-full shrink-0 md:w-1/3">
  <div class="flex flex-col p-4 card">
    <div class="text-lg"><%= t('teams.users') %></div>
    <div class="grid grid-cols-8 gap-3 py-4">      
      <% @team.team_users.accepted.includes(:user).limit(10).each do |team_user| %>
        <%= user_avatar_tag(team_user.user, :sm) %>
      <% end %>      
    </div>
    <div class="">
      <%= link_to t("teams.all_members"), user_team_users_path(@team) %>
    </div>
  </div>

  <%= render '/users/repos', user: @team %>
</div>
